{
    "name" : "posts",
    "active" : true,
    "proxy" : {
        "preserve_host" : false,
        "listen_path" : "/posts/*",
        "upstream_url" : "https://jsonplaceholder.typicode.com/posts",
        "strip_path" : true,
        "append_path" : false,
        "enable_load_balancing" : false,
        "methods" : [
            "GET"
        ]
    },
    "plugins": {
        "host_matcher": {
            "enabled": true,
            "config": {
                "hosts": ["hellofresh.*"]
            }
        },
        "rate_limit" : {
            "enabled" : true,
            "config": {
                    "limit" : "10-S"
            }
        },
        "cors" : {
            "enabled" : true,
            "config": {
                "domains" : [
                    "*"
                ],
                "methods" : [
                    "GET",
                    "POST",
                    "PUT",
                    "PATCH",
                    "DELETE"
                ],
                "request_headers" : [
                    "Origin",
                    "Authorization",
                    "Content-Type"
                ],
                "exposed_headers" : [
                    "X-Debug-Token",
                    "X-Debug-Token-Link"
                ]
            }
        },
        "oauth2" : {
            "enabled" : true,
            "config": {
                    "server_name" : "local"
            }
        }
    }
}
